doctype html
include @/@loadingio/bootstrap.ext/index.pug
html
  head
    +css([
      {name: "bootstrap", path: "dist/css/bootstrap.min.css"},
      {name: "@loadingio/bootstrap.ext"},
      {name: "ldcover"},
      {name: "ldbutton"},
      {name: "@loadingio/loading.css", path: "loading.css"},
      {name: "ldloader", version: "dev"}
    ])
    style(type="text/css"): include:stylus index.styl
  body
    .test.ldld.full.z-fixed
    .w-1024.mx-auto.my-4.rwd
      h2 ldLoader Demonstration
      .btn.btn-outline-secondary.mr-2(onclick="show('full')") toggle full
      .btn.btn-outline-secondary.mr-2(onclick="show('default')") toggle Floating Panel
      .btn.btn-outline-secondary.mr-2(onclick="show('btn')") toggle btn
      .btn.btn-outline-secondary.mr-2(onclick="show('ctrl')") toggle ctrl
      .btn.btn-outline-secondary.mr-2(onclick="show('all')") toggle multiple
      hr

      .test.btn.btn-outline-secondary.ld-ext-right.mr-2
        span Load
        .ld.ld-ball.ld-bounce
      .btn.btn-outline-secondary.mr-2: .d-flex.align-items-center
        span Ctrl
        .test.ctrl.ml-2
      .btn.btn-test
        .test.ldld.default
      .btn.btn-outline-secondary.mr-2.all.ld-ext-right All 1 #[.ld.ld-ring.ld-spin]
      .btn.btn-outline-secondary.mr-2.all.ld-ext-left All 2 #[.ld.ld-ring.ld-spin]
      .btn.btn-outline-secondary.mr-2.all.ld-ext-top All 3 #[.ld.ld-ring.ld-spin]
      #content
    +script([
      {name: "zmgr"},
      {name: "@loadingio/debounce.js"},
      {name: "ldcover"},
      {name: "ldloader", version: "dev", path: "index.js"}
    ])
    script(type="module"): include:lsc index.ls
