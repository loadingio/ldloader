.btn-test
  width: 100px
  height: 100px
  background: #ccc
  margin: auto
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  &:hover
    background: #f00

#content
  width: 100%
  height: 3em
  background: #e1e2e3
  margin: .5em 0
  position: relative
  div
    position: absolute
    top: 0
    left: 0
    height: 100%
    opacity: 0
    transition: all .35s linear
  div.running
    opacity: 1


